@model TEST_MVC2.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1>Eliminar Cliente</h1>
<h3>¿Estás seguro de que deseas eliminar este cliente?</h3>

<div class="card shadow p-4">
    <h4 class="text-center">Información del Cliente</h4>

    <dl class="row">
        <dt class="col-sm-3">Cédula:</dt>
        <dd class="col-sm-9">@Model.Cedula</dd>

        <dt class="col-sm-3">Nombre:</dt>
        <dd class="col-sm-9">@Model.Nombres @Model.Apellidos</dd>

        <dt class="col-sm-3">Correo:</dt>
        <dd class="col-sm-9">@Model.Mail</dd>

        <dt class="col-sm-3">Teléfono:</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Codigo" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
