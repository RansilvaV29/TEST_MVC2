@model TEST_MVC2.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Usuario</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow p-4">
                <h4 class="text-center mb-4">Nuevo Cliente</h4>

                @using (Html.BeginForm("Create", "Cliente", FormMethod.Post))
                {
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Cedula, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Cedula, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Apellidos, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Apellidos, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Nombres, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Nombres, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.FechaNacimiento, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control", type = "date", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Mail, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", type = "email", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Telefono, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Direccion, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Estado, new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.Estado, new SelectList(new[]
                                 {
                    new { Value = true, Text = "Activo" },
                    new { Value = false, Text = "Inactivo" }
                    }, "Value", "Text"), "-- Seleccione Estado --", new { @class = "form-control", required = "required" })
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Cliente")" class="btn btn-secondary">Volver</a>
                        <button id="botonSubmit" type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
