@model IEnumerable<TEST_MVC2.Models.OpinionesClientes>

@{
    ViewData["Title"] = "OpinionesDeClientes";
}

<h1>Opiniones de Clientes</h1>

<div class="container mt-4">
    <h2>Lista de Opiniones</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductoID)</th>
                    <th>@Html.DisplayNameFor(model => model.Calificacion)</th>
                    <th>@Html.DisplayNameFor(model => model.Comentario)</th>
                    <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductoID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Calificacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Comentario)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                        <td>
                            <a href="@Url.Action("Delete", "OpinionesClientes", new { id = item.OpinionID })" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-end mt-3">
        <a href="@Url.Action("Create", "OpinionesClientes")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Agregar Opinión
        </a>
    </div>
</div>
