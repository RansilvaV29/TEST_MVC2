@model TEST_MVC2.Models.OpinionesClientes

@{
    ViewData["Title"] = "Eliminar Opinión";
}

<h1>Eliminar Opinión</h1>
<h3>¿Estás seguro de que deseas eliminar esta opinión?</h3>

<div class="card shadow p-4">
    <h4 class="text-center">Información de la Opinión</h4>

    <dl class="row">
        <dt class="col-sm-3">Cliente:</dt>
        <dd class="col-sm-9">@Model.Codigo</dd>

        <dt class="col-sm-3">Producto:</dt>
        <dd class="col-sm-9">@Model.ProductoID</dd>

        <dt class="col-sm-3">Calificación:</dt>
        <dd class="col-sm-9">@Model.Calificacion</dd>

        <dt class="col-sm-3">Comentario:</dt>
        <dd class="col-sm-9">@Model.Comentario</dd>

        <dt class="col-sm-3">Fecha:</dt>
        <dd class="col-sm-9">@Model.Fecha</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OpinionID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
